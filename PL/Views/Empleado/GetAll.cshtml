@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GetAll</h1>

<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script type="text/javascript" src="~/js/Empleado/CRUDEmpleado.js"></script>

<button id="openModalButton" type="button" class="btn btn-primary mb-3">
    Agregar
</button>

<div class="table-responsive container-fluid">
    <div class="loader"></div>
    <table class="table table-dark table-striped text-center" id="tblEmpleado">
        <thead>
            <tr>
                <th>Editar</th>
                <th>Id Empleado</th>
                <th>Numero Nomina</th>
                <th>Nombre</th>
                <th>Apellido Paterno</th>
                <th>Apellido Materno</th>
                <th>Estado</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@*----------MODAL-----------*@

<div class="modal" tabindex="-1" id="exampleModal" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Formulario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <input id="lblIdEmpleado" type="hidden" />
                    <div class="row mb-2">
                        <label class="form-label col-2">Nombre</label>
                        <input id="txtNombre" type="text" class="form-control col" />
                    </div>
                    <div class="row mb-2">
                        <label class="form-label col-2">Apellido Paterno</label>
                        <input id="txtApellidoPaterno" type="text" class="form-control col" />
                    </div>
                    <div class="row mb-2">
                        <label class="form-label col-2">Apellido Materno</label>
                        <input id="txtApellidoMaterno" type="text" class="form-control col" />
                    </div>
                    @*<div class="row mb-2">
                        <label class="form-label col-2">Id Estado</label>
                        <input id="txtIdEstado" type="text" class="form-control col" />
                    </div>*@
                    <div class="form-floating">
                        <select class="form-select" id="floatingSelect" aria-label="Floating label select example">
                            <option selected>--SeleccionaUnEstado--</option>
                            @*<option id="opcionEstado" value="1">One</option>*@
                        </select>
                        <label for="floatingSelect">Estado...</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button id="btnAddEmpleado" type="button" class="btn btn-success">Agregar</button>
                <button id="btnUpdateEmpleado" type="button" class="btn btn-primary">Editar</button>
            </div>
        </div>
    </div>
</div>
